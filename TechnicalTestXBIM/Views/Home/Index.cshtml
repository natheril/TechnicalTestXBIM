@model TechnicalTestXBIM.Models.FilesViewModel
@{
    ViewData["Title"] = "XBIM Technical Test";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the XBIM Technical Test</h1>
    <p>Please upload IFC files: </p>
    <form asp-controller="Home" asp-action="UploadFiles" method="post"
          enctype="multipart/form-data" allow-multiple="true">

        <input type="file" name="files" multiple />
        <button type="submit">Upload Files</button>       
    </form>     
</div>
